{
  "name": "trusty-chat-falls",
  "version": "1.0.0",
  "description": "Trust falls in Slack",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --watch",
    "rebuild:docker": "docker-compose build --no-cache --force-rm",
    "start": "npm-run-all clean --parallel build:watch nodemon:debug --print-label",
    "start:docker": "docker-compose up -V -d",
    "clean": "rimraf ./dist",
    "nodemon:debug": "NODE_ENV=develop nodemon",
    "test": "NODE_ENV=develop jest",
    "lint": "eslint ./src/**/*.ts",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mgoodnight/trusty-chat-falls.git"
  },
  "author": "Matt Goodnight",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mgoodnight/trusty-chat-falls/issues"
  },
  "homepage": "https://github.com/mgoodnight/trusty-chat-falls#readme",
  "dependencies": {
    "@slack/bolt": "^3.18.0",
    "aws-sdk": "^2.1623.0",
    "config": "^3.3.11",
    "dotenv": "^16.4.5",
    "ioredis": "^5.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/config": "^3.3.4",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0"
  }
}
